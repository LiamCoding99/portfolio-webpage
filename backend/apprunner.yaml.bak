version: 1.0
runtime: python3
build:
  commands:
    build:
      - pip install -r requirements.txt
run:
  runtime-version: 3.11
  command: uvicorn main:app --host 0.0.0.0 --port 8000
  network:
    port: 8000
    env: PORT
  env:
    - name: PORT
      value: "8000"
    # Add your environment variables here
    # NOTE: DO NOT commit sensitive values!
    # Use AWS console to set actual values after deployment
    - name: SMTP_HOST
      value: "smtp.gmail.com"
    - name: SMTP_PORT
      value: "587"
    # Set these in AWS Console after deployment:
    # - SMTP_USER
    # - SMTP_PASSWORD
    # - EMAIL_FROM
    # - EMAIL_TO
    # - ALLOWED_ORIGINS
